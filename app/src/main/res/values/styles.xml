<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 通用title_bar  无背景颜色 -->
    <style name="TitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="bgatitlebar_leftAndRightTextColor">#818CAB</item>
        <item name="bgatitlebar_titleTextColor">#222222</item>
        <item name="bgatitlebar_leftAndRightTextSize">16sp</item>
        <item name="bgatitlebar_titleTextSize">18sp</item>
        <item name="bgatitlebar_leftAndRightPadding">15dp</item>
        <item name="bgatitlebar_rightMaxWidth">100dp</item>
    </style>

    <style name="TitleBar_Back" parent="TitleBar">
        <item name="android:background">@color/color_FFFFFF</item>
        <item name="bgatitlebar_leftDrawable">@drawable/title_bar_back</item>
    </style>

</resources>
